#ident	"@(#)oamintf:softwaremgmt/defaults/Form.sd_mod	1.6.1.1"

form="Modify Installation Defaults File"
help=OPEN TEXT $INTFBASE/Text.itemhelp $LININFO
framemsg="`readfile $INTFBASE/form.msg`"

`readfile $INTFBASE/frept.msg | set -l MSG2`
`set -l PKGADM="/var/sadm/install"`

done=`
	message -w ;
	run sh -cf "
		if cat >$PKGADM/admin/$F1 <<-EOF
			basedir=$F2
			mail=$F3
			runlevel=$F6
			conflict=$F7
			setuid=$F8
			action=$F9
			idepend=$F10
			rdepend=$F11
			space=$F12
			partial=$F13
			instance=$F14
			EOF
		then
			echo The defaults file $F1 has been modified.
		else
			echo The defaults file $F1 could not be modified.
		fi
	" ;
	message -f $MSG2;
`UPDATE `getfrm`

name=Installation defaults filename:
lininfo=mod-file
nrow=1
ncol=2
frow=1
fcol=35
rows=1
columns=14
rmenu={ `/usr/bin/ls $PKGADM/admin` }
choicemsg=Select a filename and press ENTER.
valid=`
	if [ -z $F1 ] ;
	then
		echo FALSE ;
	elif [ -f $PKGADM/admin/$F1 ] ;
	then
		echo TRUE ;
	elif [ -f $F1 ] ;
	then
		echo TRUE ;
	else
		echo FALSE ;
	fi
`
invalidmsg=Error - input is not an existing installation defaults filename.

