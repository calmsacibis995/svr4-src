frow=3
fcol=26
rows=1
columns=44 
value=${($PKGADM/admin/$F1)mail}
rmenu=OPEN MENU $OBJ_DIR/Menu.logins
valid=`
	message -w ;
	shell "
		[ -z \"$F3\" ] && exit 1
		for arg in \`echo \"$F3\" | sed 's/,/ /g'\`
		do
			/usr/bin/grep \"^\$arg:\" /etc/passwd && continue
			exit 1
		done
	"
`
invalidmsg=Error - specify list of valid login names acceptable to mail(1)
	
