#ident	"@(#)devintf:groups/mbrship/list/Form.list	1.3"

form="List Members"
help=OPEN TEXT $INTFBASE/Text.itemhelp $LININFO
lifetime=longterm
begrow=any
begcol=any
framemsg=`readfile $INTFBASE/form.msg`

init=`
    getdgrp | set -l DEVGRPS ;
    if [ "$DEVGRPS" ] ;
    then set -l OK=TRUE ;
    else
	set -l OK=FALSE ;
	message "There are no device groups to list." ;
    fi ;
`$OK

done=`
    indicator -w "" ;
    getfrm | set -l FRAMENUM ;
    listdgrp $F1 | set -l MEMBERS ;
    if [ -z "$MEMBERS" ] ;
    then
	set -l FILE=Text.none ;
    else
	set -l FILE=Text.list ;
    fi ;
    indicator "" ;
`OPEN TEXT $OBJ_DIR/$FILE $F1 $MEMBERS

name="Device Group Name:"
lininfo="Form.list:Name"
nrow=1
ncol=1
frow=1
fcol=20
rows=1
columns=14
invalidmsg=$INVMSG
valid=`
    indicator -w "" ;
    if [ "$F1" ] ;
    then 
	regex -v "$F1" '^[-.$_a-zA-Z0-9]+$' 'TRUE' '.*' 'FALSE' | set -l VALID ;
	if [ "$VALID" = "TRUE" ] ;
	then
	    listdgrp $F1 | set -l MEMBERS ;
	    if [ $RET -ne 0 ] ;
	    then
		if [ $RET -eq 3 ] ;
		then set -l INVMSG="The device group \"$F1\" does not exist." ;
		else set -l INVMSG="Internal error $RET" ;
		fi ;
		set -l VALID=FALSE ;
	    fi ;
	else
	    set -l INVMSG="The value \"$F1\" is not a valid device group name." ;
	fi ;
    else
	set -l VALID=FALSE ;
	set -l INVMSG="This field may not be blank." ;
    fi ;
    indicator "" ;
`$VALID
rmenu={ `
    indicator -w "" ; 
    echo $DEVGRPS | tr ' ' '\012' | sort ;
    indicator ""
` }

name=RESET
button=8
action=reset
