#ident	"@(#)devintf:devices/attrs/list/Form.list	1.3"

form="List Attributes"
help=OPEN TEXT $INTFBASE/Text.itemhelp $LININFO
lifetime=longterm
begrow=any
begcol=any
framemsg=`readfile $INTFBASE/form.msg`

init=`
    getdev | set -l DEVLIST ;
    if [ "$DEVLIST" ] ;
    then
	set -l GO="TRUE" ;
    else
	message "There are no devices currently defined." ;
	set -l GO="FALSE" ;
    fi ;
`$GO

done=`
    getfrm | set -l FRAMENUM ;
`OPEN TEXT $OBJ_DIR/Text.list "$F1"

name="Device: "
lininfo="Form.list:Device"
nrow=1
ncol=1
frow=1
fcol=9
rows=1
columns=42
rmenu={ `
    indicator -w "" ;
    getdev ;
    indicator "" ;
` }
invalidmsg=$INVMSG
valid=`
    indicator -w "" ;
    if [ "$F1" ] ;
    then
	devattr "$F1" alias >/dev/null ;
	if [ $RET -eq 0 ] ;
	then set -l VALIDFLAG="TRUE" ;
	elif [ $RET -eq 3 ] ;
	then
	    set -l VALIDFLAG="FALSE" ;
	    set -l INVMSG="There is no device definition for the device \"$F1\"." ;
	else
	    set -l VALIDFLAG="FALSE" ;
	    set -l INVMSG="Internal error $RET" ;
	fi ;
    else
	set -l VALIDFLAG="FALSE" ;
	set -l INVMSG='This field may not be blank.' ;
    fi ;
    indicator "" ;
`$VALIDFLAG

name=RESET
button=8
action=reset
