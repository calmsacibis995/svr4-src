#ident	"@(#)initpkg:init.d/cron	1.3.3.1"

#	cron control
pid=`/usr/bin/ps -e | /usr/bin/grep cron | /usr/bin/sed -e 's/^  *//' -e 's/ .*//'`
case $1 in
'start')
	if [ "${pid}" = "" ]
	then
		/usr/bin/rm -f /etc/cron.d/FIFO
		if [ -x /usr/bin/cron ]
		then
			/usr/bin/cron
		elif [ -x /usr/sbin/cron ]
		then
			/usr/sbin/cron
		fi
	fi
	;;
'stop')
	if [ "${pid}" != "" ]
	then
		/usr/bin/kill ${pid}
	fi
	;;
*)
	echo "usage: /etc/init.d/cron {start|stop}"
	;;
esac
