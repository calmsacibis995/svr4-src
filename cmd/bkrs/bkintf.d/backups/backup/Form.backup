#ident	"@(#)bkrs:bkintf.d/backups/backup/Form.backup	1.12.2.1"
form="Start Backup Jobs"

help=OPEN TEXT $INTFBASE/Text.itemhelp $LININFO

`set -l CMD=""`

done=`message -w;
	if [ $F2 = "interactive" -o $F7 = "yes" -o $F8 = "yes" ];
	then
		run sh -c "bkup \"$F1\" \"$F2\" \"$F3\" \"$F4\" \"$F5\" \"$F6\" \"$F7\" \"$F8\" \"$F9\" ";
	else
		set -l ERR=/tmp/$VPID.bea;
		message -w Trying to start backup job.;
		shell "bkup \"$F1\" \"$F2\" \"$F3\" \"$F4\" \"$F5\" \"$F6\" \"$F7\" \"$F8\" \"$F9\" >$ERR 2>$ERR &";
		if [ $RET -eq 0 ] ;
		then
			getfrm | set -l FNUM;
			set -l CMD="OPEN TEXT $OBJ_DIR/Text.bkpok $FNUM";
		else
			set -l CMD="OPEN TEXT $OBJ_DIR/Text.bkpnok";
		fi;
	fi`$!CMD

begrow=any
begcol=any

# Table field - F1
name=Table:
lininfo=F1
nrow=2
ncol=2

value=`brfindtab bkreg`
scroll=TRUE

frow=2
fcol=9
rows=1
columns=67

choicemsg=`helppath -h "~Enter the path to the backup register." -gro`

valid=`valpath -gro "$F1"`

invalidmsg=`errpath -gro`

# Type field - F2
name=Type:
lininfo=F2
nrow=4
ncol=2

frow=4
fcol=8
rows=1
columns=12

value=background
rmenu={ background interactive }
menuonly

choicemsg="Enter the way the backup is to be run: background, or interactive."
invalidmsg="You must enter 'background', 'interactive'."

# Object name - F3
name=Object name:
lininfo=F3
nrow=6
ncol=2

frow=6
fcol=15
rows=1
columns=61

value=all
scroll=TRUE

choicemsg="Enter the name of the object for which the backup will be run or 'all'."

valid=`regex -v "$F3" 'all' TRUE '^.*' 'valpath -o "$F3"'`

invalidmsg="Enter a valid pathname or 'all'."

#Weeks field - F4
name=Week(s):
lininfo=F4
nrow=8
ncol=2

frow=8
fcol=11
rows=1
columns=65

value="current week"
scroll=TRUE
choicemsg="Enter a list of week ranges or 'demand' or 'current week'."

valid=`valweeks "$F4" "current week" "$F1"`

invalidmsg=`errweeks "current week" "$F1"`

# Days field - F5
name=Day(s):
lininfo=F5
nrow=9
ncol=2

frow=9
fcol=10
rows=1
columns=66

show=`regex -v "$F4" 'demand' FALSE '^.*' TRUE`
#show=FALSE
value=today
choicemsg="Enter a list of day ranges or 'today'."

valid=`valdays "$F5" today`

invalidmsg=`errdays today`

# Notify field - F6
name=Notify:
lininfo=F6
nrow=11
ncol=2

frow=11
fcol=10
rows=1
columns=3

choicemsg="Do you want to be notified by mail when this backup completes?"

value=yes
rmenu={ yes no }
menuonly

# Display mode field - F7
name=Display mode:
lininfo=F7
nrow=12
ncol=2

frow=12
fcol=16
rows=1
columns=3

choicemsg="Enter 'yes' if you want to display the backup operations but not execute them."

value=no
rmenu={ yes no }
menuonly

# Estimate volumes field - F8
name=Estimate volumes:
lininfo=F8
nrow=13
ncol=2

frow=13
fcol=20
rows=1
columns=3

choicemsg="Enter 'yes' if you want backup to estimate the number of volumes required."
value=no
rmenu={ yes no }
menuonly

# Trace mode field - F9
name=Trace mode:
lininfo=F9
nrow=14
ncol=2

frow=14
fcol=14
rows=1
columns=3

show=`regex -v "$F2" 'interactive' TRUE '^.*' FALSE`

choicemsg="Enter 'yes' if you want the file names printed as they are backed up."

value=no
rmenu={ yes no }
menuonly
