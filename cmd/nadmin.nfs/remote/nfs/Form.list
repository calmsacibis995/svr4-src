#ident	"@(#)nadmin.nfs:remote/nfs/Form.list	1.1"
form="Lists Remote Resources Automatically-Currently Mounted via NFS" 
help=OPEN TEXT $INTFBASE/Text.itemhelp $LININFO

`set -l OBJ_DIR="$INTFBASE/netservices/remote_files/remote/nfs"`
`readfile "$INTFBASE/form.msg" | message -p`

done=`indicator -w;
	set -el IMM="$F1" -el AUTO="$F2";
	if [ "$IMM" = "yes" -o "$AUTO" = "yes" ];
	then
		"$INTFBASE/netservices/remote_files/remote/nfs/bin/ls_remote" | set -l PID;
		set -l KEYCMD="OPEN TEXT $INTFBASE/netservices/remote_files/remote/nfs/Text.list /var/tmp/rem_$PID";
	else
		message "No options selected.  Press CANCEL to return to the menu.";
		set -l KEYCMD="NOP";
	fi;
	`$KEYCMD

name="List resources mounted currently?"
nrow=1
ncol=1
frow=1
fcol=35
rows=1
columns=3
rmenu={ yes no }
menuonly=true
value="yes"
lininfo=list:curr
invalidmsg="Press CHOICES to select valid response."

name="List resources mounted automatically?"
nrow=2
ncol=1
frow=2
fcol=39
rows=1
columns=3
rmenu={ yes no }
menuonly=true
value="yes"
lininfo=list:auto
invalidmsg="Press CHOICES to select valid response."
